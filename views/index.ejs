<!DOCTYPE html>
<html lang="da">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Chatbot</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <main class="container">
      <ul class="chat" id="chat">
        <% history.forEach(item => { %>
          <% if (item.message) { %>
            <%- include("partials/user", { item }) %>
          <% } else { %>
            <%- include("partials/bot", { item }) %>
          <% } %>
        <% }) %>
      </ul>

      <form class="input-bar" id="chat-form" method="POST" action="/chat">
        <input
          type="text"
          name="name"
          placeholder="Dit navn"
          value="<%= name %>"
          autocomplete="off"
          aria-label="Dit navn"
          required
        />
        <input
          type="text"
          name="message"
          placeholder="Skriv din beskedâ€¦"
          value=""
          autocomplete="off"
          aria-label="Din besked"
          required
          autofocus
        />
        <button type="submit" id="send-btn">Send</button>
        <% if (error) { %>
          <p class="error" role="alert"><%= error %></p>
        <% } %>
      </form>
    </main>
  </body>
</html>
