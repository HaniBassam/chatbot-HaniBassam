<html lang="da">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Chatbot</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <main class="container">
      <ul class="chat" id="chat">
        <% history.forEach(item => { %>
          <li class="msg user">
            <div class="bubble">
              <div class="text"><%= item.message %></div>
              <small class="meta"><%= item.ts %> · <%= item.name || "Bruger" %></small>
            </div>
          </li>
          <li class="msg bot">
            <div class="bubble">
              <div class="text"><%= item.answer %></div>
              <small class="meta"><%= item.ts %> · Bot</small>
            </div>
          </li>
        <% }) %>
      </ul>
      <form class="input-bar" id="chat-form" method="POST" action="/chat">
        <input
          type="text"
          name="name"
          placeholder="Dit navn"
          value="<%= name %>"
          autocomplete="off"
          aria-label="Dit navn"
        />
        <input
          type="text"
          name="message"
          placeholder="Skriv din besked…"
          value=""
          autocomplete="off"
          aria-label="Din besked"
        />
        <button type="submit" id="send-btn">Send</button>
        <% if (error) { %>
          <p class="error" role="alert"><%= error %></p>
        <% } %>
      </form>
    </main>

  </body>
</html>
